{% extends "back.html.twig" %}

{% block title "gestion des Vehicules" %}

{% block bodyback %}

	<h1>Gestion des Vehicules</h1>

	<table class="table table-striped align-middle">
		<thead>
			<tr>
				<th>marque</th>
				<th>modele</th>
				<th>description</th>
			</tr>
		</thead>
		<tbody>
			{% for vehicules in vehicules %}
				<tr>
					<td>{{ vehicules.marque }}</td>
					<td>{{ vehicules.modele }}</td>
					<td>{{ vehicules.description }}</td>
					<td>
						<a href="" class="btn btn-warning me-3">
							Modifier
						</a>
						<a href="{{ path('vehicule_delete' , {id : vehicules.id}) }}" class="btn btn-danger">
							supprimer
						</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}
